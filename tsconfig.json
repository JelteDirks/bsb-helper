{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "outDir": "lib"
  },
  "exclude": [
    "./node_modules",
    "definitions",
    "./dist",
    "./lib",
    "./**/*.spec.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "*.d.ts"
  ]
}