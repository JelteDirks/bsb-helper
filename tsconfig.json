{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/bsb-typings/index.d.ts"
    ]
  },
  "exclude": [
    "./node_modules",
    "definitions",
    "./dist",
    "./lib",
    "./**/*.spec.ts"
  ],
  "include": [
    "./index.ts",
    "./src/**/*.ts"
  ]
}